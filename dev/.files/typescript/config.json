{
	"exclude"         : [
		"**/node_modules/**",
		"**/jspm_packages/**",
		"**/bower_components/**"
	],
	"compilerOptions" : {
		"target"                       : "es2021",
		"lib"                          : [ "es2021" ],

		"module"                       : "es2020",
		"moduleResolution"             : "node",
		"esModuleInterop"              : true,

		"noEmit"                       : true,
		"strict"                       : true,
		"allowJs"                      : true,
		"checkJs"                      : false,

		"resolveJsonModule"            : true,
		"allowSyntheticDefaultImports" : true
	}
}
