{
	"include"         : [ "src/**/*", "tests/**/*" ],
	"exclude"         : [ "vendor/**/*", "node_modules/**/*", "jspm_packages/**/*", "bower_components/**/*" ],
	"compilerOptions" : {
		"target"                       : "es6",
		"module"                       : "es6",
		"moduleResolution"             : "node",
		"lib"                          : [ "es6", "dom" ],

		"noEmit"                       : true,
		"strict"                       : true,
		"allowJs"                      : true,
		"checkJs"                      : false,

		"resolveJsonModule"            : true,
		"allowSyntheticDefaultImports" : true,

		"typeRoots"                    : [
			"./node_modules/@types",
			"./node_modules/@cloudflare"
		]
	}
}
